<Window x:Class="TechMate.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        mc:Ignorable="d"
        Title="TechMate v2.0 Enterprise" Height="650" Width="1000"
        WindowStartupLocation="CenterScreen"
        TextElement.Foreground="{DynamicResource MaterialDesignBody}"
        Background="{DynamicResource MaterialDesignPaper}"
        FontFamily="{DynamicResource MaterialDesignFont}">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <materialDesign:ColorZone Mode="PrimaryMid" Padding="16">
            <DockPanel>
                <materialDesign:PackIcon Kind="Laptop" Width="30" Height="30" VerticalAlignment="Center" Margin="0,0,10,0"/>
                <TextBlock VerticalAlignment="Center" FontSize="20" FontWeight="Bold" Text="TechMate Enterprise Toolkit"/>
            </DockPanel>
        </materialDesign:ColorZone>

        <TabControl Grid.Row="1" Style="{StaticResource MaterialDesignFilledTabControl}">

            <TabItem Header="DASHBOARD">
                <Grid Margin="20">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>

                    <StackPanel Grid.Row="0" Margin="0,0,0,20">
                        <TextBlock Text="Centrum Statusu" FontSize="22" FontWeight="Bold" Foreground="{DynamicResource PrimaryHueMidBrush}"/>
                        <TextBlock x:Name="TxtWelcome" Text="Witaj, Administratorze." FontSize="14" Foreground="Gray"/>
                    </StackPanel>

                    <Grid Grid.Row="1" Margin="0,0,0,20">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>

                        <materialDesign:Card Grid.Column="0" Margin="0,0,10,0" Padding="15" UniformCornerRadius="8" Background="WhiteSmoke">
                            <StackPanel>
                                <StackPanel Orientation="Horizontal" Margin="0,0,0,10">
                                    <materialDesign:PackIcon Kind="Monitor" Width="25" Height="25" Foreground="{DynamicResource PrimaryHueMidBrush}"/>
                                    <TextBlock Text="SYSTEM" Margin="10,0,0,0" VerticalAlignment="Center" FontWeight="Bold" Foreground="Black"/>
                                </StackPanel>
                                <TextBlock x:Name="TxtOsVersion" Text="Windows..." FontSize="14" TextWrapping="Wrap" Foreground="Black"/>
                            </StackPanel>
                        </materialDesign:Card>

                        <materialDesign:Card Grid.Column="1" Margin="5,0,5,0" Padding="15" UniformCornerRadius="8" Background="WhiteSmoke">
                            <StackPanel>
                                <StackPanel Orientation="Horizontal" Margin="0,0,0,10">
                                    <materialDesign:PackIcon Kind="AccountCircle" Width="25" Height="25" Foreground="{DynamicResource PrimaryHueMidBrush}"/>
                                    <TextBlock Text="UŻYTKOWNIK" Margin="10,0,0,0" VerticalAlignment="Center" FontWeight="Bold" Foreground="Black"/>
                                </StackPanel>
                                <TextBlock x:Name="TxtUserName" Text="User" FontSize="14" Foreground="Black"/>
                            </StackPanel>
                        </materialDesign:Card>

                        <materialDesign:Card Grid.Column="2" Margin="10,0,0,0" Padding="15" UniformCornerRadius="8" Background="WhiteSmoke">
                            <StackPanel>
                                <StackPanel Orientation="Horizontal" Margin="0,0,0,10">
                                    <materialDesign:PackIcon Kind="ClockTimeFourOutline" Width="25" Height="25" Foreground="{DynamicResource PrimaryHueMidBrush}"/>
                                    <TextBlock Text="CZAS PRACY" Margin="10,0,0,0" VerticalAlignment="Center" FontWeight="Bold" Foreground="Black"/>
                                </StackPanel>
                                <TextBlock x:Name="TxtUptime" Text="00:00:00" FontSize="14" Foreground="Black"/>
                            </StackPanel>
                        </materialDesign:Card>
                    </Grid>

                    <materialDesign:Card Grid.Row="2" Padding="20" UniformCornerRadius="8" Background="WhiteSmoke">
                        <StackPanel>
                            <TextBlock Text="Monitor Wydajności (Live)" FontSize="16" FontWeight="Bold" Margin="0,0,0,20" Foreground="Black"/>

                            <Grid Margin="0,0,0,15">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="80"/>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="50"/>
                                </Grid.ColumnDefinitions>
                                <TextBlock Text="CPU" VerticalAlignment="Center" FontWeight="Bold" Foreground="Black"/>
                                <ProgressBar Grid.Column="1" x:Name="PbCpu" Minimum="0" Maximum="100" Value="45" Height="20" Foreground="#FFD32F2F" Background="#E0E0E0"/>
                                <TextBlock Grid.Column="2" x:Name="TxtCpuUsage" Text="0%" VerticalAlignment="Center" HorizontalAlignment="Right" Foreground="Black"/>
                            </Grid>

                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="80"/>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="50"/>
                                </Grid.ColumnDefinitions>
                                <TextBlock Text="RAM" VerticalAlignment="Center" FontWeight="Bold" Foreground="Black"/>
                                <ProgressBar Grid.Column="1" x:Name="PbRam" Minimum="0" Maximum="100" Value="60" Height="20" Foreground="#FF388E3C" Background="#E0E0E0"/>
                                <TextBlock Grid.Column="2" x:Name="TxtRamUsage" Text="0%" VerticalAlignment="Center" HorizontalAlignment="Right" Foreground="Black"/>
                            </Grid>

                            <TextBlock Text="Dane odświeżane w czasie rzeczywistym." FontSize="10" Foreground="Gray" Margin="0,20,0,0" HorizontalAlignment="Center"/>
                        </StackPanel>
                    </materialDesign:Card>
                </Grid>
            </TabItem>

            <TabItem Header="SIECI &amp; WIFI">
                <Grid Margin="20">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="200"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>

                    <StackPanel Grid.Column="0" Margin="0,0,20,0">
                        <TextBox x:Name="TxtTargetIp" 
                                 materialDesign:HintAssist.Hint="Adres IP lub Domena" 
                                 Style="{StaticResource MaterialDesignOutlinedTextBox}"
                                 Text="google.com"
                                 Margin="0,0,0,10"
                                 Background="White"/>

                        <Button Content="SKANER PORTÓW" Margin="0,5" Click="BtnPortScanner_Click"/>
                        <Button Content="HASŁA WI-FI" Margin="0,5" Background="#FFD32F2F" BorderBrush="#FFD32F2F" Click="BtnWifi_Click"/>
                        <Button Content="NAPRAWA SIECI" Margin="0,5" Click="BtnFixNetwork_Click"/>
                        <Button Content="MOJE IP (GEO)" Margin="0,5" Click="BtnMyIp_Click"/>
                    </StackPanel>

                    <materialDesign:Card Grid.Column="1" Background="WhiteSmoke" Padding="10" UniformCornerRadius="5">
                        <ScrollViewer VerticalScrollBarVisibility="Auto">
                            <TextBlock x:Name="OutputConsole" 
                                       Text="Gotowy do działania..." 
                                       FontFamily="Consolas" 
                                       FontSize="14" 
                                       Foreground="Black" 
                                       TextWrapping="Wrap"/>
                        </ScrollViewer>
                    </materialDesign:Card>
                </Grid>
            </TabItem>

            <TabItem Header="ŚLEDCZY (FORENSICS)">
                <Grid Margin="20">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="200"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>

                    <StackPanel Grid.Column="0" Margin="0,0,20,0">
                        <TextBlock Text="Analiza śladów" FontSize="14" Foreground="Gray" Margin="0,0,0,10"/>
                        <Button Content="HISTORIA USB" Margin="0,5" Background="#FFEF6C00" BorderBrush="#FFEF6C00" Click="BtnUsbHistory_Click"/>
                        <Button Content="PLIK HOSTS" Margin="0,5" Click="BtnHosts_Click"/>
                    </StackPanel>

                    <materialDesign:Card Grid.Column="1" Background="WhiteSmoke" Padding="10" UniformCornerRadius="5">
                        <Grid>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="*"/>
                            </Grid.RowDefinitions>

                            <TextBlock x:Name="ForensicStatus" Text="Wybierz narzędzie do analizy..." Foreground="Black" Margin="0,0,0,10"/>

                            <DataGrid x:Name="GridUsb" Grid.Row="1" AutoGenerateColumns="False" CanUserAddRows="False" IsReadOnly="True" Visibility="Hidden" Background="White">
                                <DataGrid.Columns>
                                    <DataGridTextColumn Header="Nazwa urządzenia" Binding="{Binding Name}" Width="*"/>
                                    <DataGridTextColumn Header="Ostatnie podłączenie" Binding="{Binding LastConnected}" Width="150"/>
                                    <DataGridTextColumn Header="Unikalne ID (Serial)" Binding="{Binding Serial}" Width="200"/>
                                </DataGrid.Columns>
                            </DataGrid>

                            <TextBox x:Name="TxtHostsViewer" Grid.Row="1" 
                                     FontFamily="Consolas" 
                                     AcceptsReturn="True" 
                                     VerticalScrollBarVisibility="Auto"
                                     IsReadOnly="True"
                                     Visibility="Hidden"
                                     Background="White"/>
                        </Grid>
                    </materialDesign:Card>
                </Grid>
            </TabItem>

            <TabItem Header="SERWIS">
                <Grid Margin="20">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="200"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>

                    <StackPanel Grid.Column="0" Margin="0,0,20,0">
                        <TextBlock Text="Narzędzia serwisowe" FontSize="14" Foreground="Gray" Margin="0,0,0,10"/>
                        <Button Content="RAPORT BATERII" Margin="0,5" Click="BtnBattery_Click"/>
                        <Button Content="AUTOSTART (STARTUP)" Margin="0,5" Click="BtnStartup_Click"/>
                        <Button Content="OCZYŚĆ DYSK (TEMP)" Margin="0,5" Background="#FFD32F2F" BorderBrush="#FFD32F2F" Click="BtnCleanDisk_Click"/>
                    </StackPanel>

                    <materialDesign:Card Grid.Column="1" Background="WhiteSmoke" Padding="10" UniformCornerRadius="5">
                        <ScrollViewer VerticalScrollBarVisibility="Auto">
                            <TextBlock x:Name="ServiceOutput" 
                                       Text="Gotowy do prac serwisowych..." 
                                       FontFamily="Consolas" 
                                       FontSize="14" 
                                       Foreground="Black" 
                                       TextWrapping="Wrap"/>
                        </ScrollViewer>
                    </materialDesign:Card>
                </Grid>
            </TabItem>

        </TabControl>
    </Grid>
</Window>